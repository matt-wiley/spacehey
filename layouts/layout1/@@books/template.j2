<div class="book_container">
{%- for book in data.books %}
    <!--
    {{ book.title }}
    {{ book.author }}
    -->
    <a class="book_link" href="{{ book.link }}" title="'{{ book.title }}' by {{ book.author }}">
        <img class="book_image" src="{{ book.image_src}}" height="125" alt="'{{ book.title }}' by {{ book.author }}" />
    </a>
{%- endfor %}
</div>
